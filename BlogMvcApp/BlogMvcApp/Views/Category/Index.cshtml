@model IEnumerable<BlogMvcApp.Models.CategoryModel>

@{
    ViewBag.Title = "Index";
}

<h2>Category List</h2>
<hr />
<p>
    @Html.ActionLink("Create New Category", "Create", null, new {@class= "btn btn-primary placeholder-xs " })
</p>
<hr />
@if (TempData["Category"] != null)
{
    var category = (BlogMvcApp.Models.Category)TempData["Category"];
    <div class="alert alert-success">
        <span class="glyphicon glyphicon-ok"></span>
        <b>@category.CategoryName</b> Succesfully Updated
    </div>
}
<table class="table table-bordered table-hover table-striped" >
    <tr>
        <th style="width: 70%;">
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th style="width: 10%; ">
            @Html.DisplayNameFor(model=>model.BlogNumber)
        </th>
        <th style="width:150px;"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
             @item.CategoryName
            
        </td>
        <td>
            @item.BlogNumber
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }, new {@class= "btn btn-warning placeholder-xs" }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }, new { @class = "btn btn-primary placeholder-xs" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }, new { @class = "btn btn-danger placeholder-xs" })
        </td>
    </tr>
}

</table>
